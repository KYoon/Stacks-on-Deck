 <div class = "container">

   <div class="waiting-room">
    <div class="row">
     <div class= "col-xs-12">
      <h3>Welcome <span id="username"><%= username %></span></h3>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-12 player-list">
      <p>Players in the game:</p>
    </div>
  </div>


  <div class="row">
  <div class="card-count-container col-xs-12">
  <div class="card" id="hand-count">
  <div class="up-arrow">
      <i class="fa fa-sort-asc fa-5x"></i>
  </div>

  <div class="hand-count-number">
    <h1 id="count">5</h1>
  </div>

    <div class="down-arrow">
      <i class="fa fa-sort-desc fa-5x"></i>
    </div>
  </div>

  </div>
  <div class="start-game">
    <button class="btn btn-default" id="start-game-btn">Start Game</button>
  </div>
</div>
</div>


<div class="active-game" style="display: none">

    <div class="row table-container">
      <div class= "col-xs-12">
      <div class="table-buttons"></div>
      <div class = "tableclass"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-8 offset-col-md-2 hand-buttons-view">
      <h4>Hand options:</h4>
      <button id="draw-card" style="display: none" class="btn btn-default">Draw Card</button>
    </div>
  </div>

  <div class="row">
    <div class="table col-md-8 offset-col-md-2 passing-player-list" style="display: none">
      <p>Pass card to player: </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 player-hand">
      <p>Your cards are:</p>
    </div>
  </div>
</div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/public/socket_magic.js"></script>
<script>
var userData = {
  username: "<%= username %>",
  roomkey: "<%= roomkey %>",
}
</script>
