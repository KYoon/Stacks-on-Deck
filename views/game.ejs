 <div class = "container">
  <div class="row">
    <p>Welcome <span id="username"><%= username %></span></p>
    <p>You are in the room: <span id="roomkey"><%= roomkey %></span></p>
  </div>

  <div class="row player-list">
    <p>Players in the game:</p>
  </div>

  <div class="row">
    <div class="table-buttons"></div>
    <div class = "tableclass"></div>
  </div>


<div class="row">
  <form class="dealing-cards">
    <input type="text" id="initial-deal-count">
    <input type= "checkbox" id = "facedown" name="card-appearance">Deal Cards Face Down<br>
    <input type="submit" id="deal" value="Deal Them Cards">
  </form>
</div>

<div class="row">
  <h4>Hand options:</h4>
  <button id="draw-card" style="display: none">Draw Card</button>
  <button id="pass-card" style="display: none">Pass Card</button>
  <button id="pass-table" style="display: none">Play Card</button>
  <button id="discard-card" style="display: none">Discard Card</button>
</div>

  <div class="row">
    <div class="table col-md-8 offset-col-md-2 passing-player-list" style="display: none">
      <p>Pass card to player: </p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 player-hand">
      <p>Your cards are:</p>
    </div>
  </div>
</div>

